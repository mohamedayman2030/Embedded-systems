#include <avr/io.h>
/*work with 1 MHZ frequency */
#define F_CPU 1000000

int main(void){
	/* initialize the push button as input */
	DDRA &=~(1<<3);
	/* initialize the LED as output */
	DDRC |=(1<<5);


	while(1){
		/* if switch pressed turn on the led */
		if(PINA &(1<<3)){
			PORTC |=(1<<5);
		}
		/* if switch released turnoff the led */
		else{
			PORTC &=~(1<<5);
		}

	}
}

